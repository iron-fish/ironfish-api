generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int       @id @default(autoincrement())
  created_at  DateTime  @default(now()) @db.Timestamp(6)
  updated_at  DateTime  @default(now()) @db.Timestamp(6)
  type        EventType
  occurred_at DateTime  @db.Timestamp(6)
  points      Int
  user_id     Int
  user        User      @relation(fields: [user_id], references: [id])

  @@index([user_id], name: "index_events_on_user_id")
  @@map("events")
}

model User {
  id                Int      @id @default(autoincrement())
  created_at        DateTime @default(now()) @db.Timestamp(6)
  updated_at        DateTime @default(now()) @updatedAt @db.Timestamp(6)
  email             String   @db.VarChar
  graffiti          String   @db.VarChar
  discord_username  String?  @db.VarChar
  telegram_username String?  @db.VarChar
  total_points      Int      @default(0)
  events            Event[]

  @@index([email], name: "index_users_on_email")
  @@unique([graffiti], name: "uq_users_on_graffiti")
  @@map("users")
}

enum EventType {
  BLOCK_MINED
  BUG_CAUGHT
  COMMUNITY_CONTRIBUTION
  NODE_HOSTED
  PULL_REQUEST_MERGED
  SOCIAL_MEDIA_PROMOTION

  @@map("event_type")
}
